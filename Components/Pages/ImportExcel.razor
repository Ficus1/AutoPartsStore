.text-primary {
    color: #0d6efd !important;
}

h2 {
    font-size: 1.75rem;
    letter-spacing: -0.01em;
}

/* Спиннер */
.spinner-border {
    vertical-align: middle;
}

/* Улучшения для кликабельности */
.form-label {
    cursor: default;
}

.upload-content i,
.upload-content p {
    pointer-events: none;
}

