@page "/importexcel"
@using ClosedXML.Excel
@using Microsoft.EntityFrameworkCore
@using AutoPartsStore.Data
@inject IDbContextFactory<AutoPartsContext> DbFactory
@inject IJSRuntime JS
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator,Manager")]

<PageTitle>Импорт данных</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">
                    <!-- Заголовок -->
                    <div class="text-center mb-4">
                        <div class="import-icon mb-3">
                            <i class="bi bi-upload"></i>
                        </div>
                        <h2 class="fw-bold text-primary mb-2">Импорт данных из Excel</h2>
                        <p class="text-muted">Загрузите файл Excel для добавления данных в систему</p>
                    </div>

                    <!-- Загрузка файла -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold mb-3 d-block">Выберите файл Excel:</label>
                        <div class="file-upload-area border rounded p-4 text-center position-relative">
                            <InputFile OnChange="LoadExcelFile" accept=".xlsx,.xls" 
                                     class="file-input" />
                            <div class="upload-content">
                                <i class="bi bi-file-earmark-excel text-primary fs-1"></i>
                                <p class="text-muted mt-2">Перетащите файл или кликните для выбора</p>
                                <p class="text-muted small">Поддерживаются файлы .xlsx, .xls</p>
                            </div>
                        </div>
                    </div>

                    <!-- Информация о выбранном файле -->
                    @if (selectedFile != null)
                    {
                        <div class="alert alert-light border mb-4">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-file-earmark-excel-fill text-success fs-4 me-3"></i>
                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-1">@selectedFile.Name</h6>
                                    <p class="mb-0 text-muted small">
                                        Размер: @((selectedFile.Size / 1024).ToString("N0")) КБ
                                    </p>
                                </div>
                                <button @onclick="ClearFile" 
                                        class="btn btn-sm btn-outline-secondary p-1"
                                        type="button">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </div>
                        </div>
                    }

                    <!-- Кнопка импорта -->
                    <div class="d-grid gap-2">
                        <button @onclick="ImportData" 
                                disabled="@(selectedFile == null || isLoading)"
                                class="btn btn-primary btn-lg fw-semibold"
                                type="button">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                <span>Идет импорт...</span>
                            }
                            else
                            {
                                <i class="bi bi-upload me-2"></i>
                                <span>Начать импорт</span>
                            }
                        </button>
                    </div>

                    <!-- Результаты импорта -->
                    @if (importResult != null)
                    {
                        <div class="mt-4">
                            <div class="alert @(importResult.HasErrors ? "alert-warning" : "alert-success") border">
                                <h5 class="alert-heading d-flex align-items-center">
                                    <i class="bi @(importResult.HasErrors ? "bi-exclamation-triangle" : "bi-check-circle") me-2"></i>
                                    Результаты импорта
                                </h5>
                                
                                @if (!importResult.HasErrors)
                                {
                                    <div class="row g-3 mt-3">
                                        <div class="col-md-4">
                                            <div class="text-center p-2">
                                                <div class="fs-3 fw-bold text-success">@importResult.CategoriesImported</div>
                                                <div class="text-muted small">Категории</div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="text-center p-2">
                                                <div class="fs-3 fw-bold text-success">@importResult.ManufacturersImported</div>
                                                <div class="text-muted small">Производители</div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="text-center p-2">
                                                <div class="fs-3 fw-bold text-success">@importResult.PartsImported</div>
                                                <div class="text-muted small">Товары</div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="mt-2">
                                        <p class="mb-0">@importResult.ErrorMessage</p>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Подсказка -->
                    <div class="text-center mt-4">
                        <div class="alert alert-light border">
                            <i class="bi bi-info-circle me-1"></i>
                            <small class="text-muted">
                                Файл должен соответствовать формату экспорта системы
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private class ImportResult
    {
        public int CategoriesImported { get; set; }
        public int ManufacturersImported { get; set; }
        public int PartsImported { get; set; }
        public bool HasErrors => ErrorMessage != null;
        public string? ErrorMessage { get; set; }
    }
    
    private IBrowserFile? selectedFile;
    private bool isLoading = false;
    private ImportResult? importResult;
    
    private void LoadExcelFile(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        importResult = null;
    }
    
    private void ClearFile()
    {
        selectedFile = null;
        importResult = null;
    }
    
    private async Task ImportData()
    {
        if (selectedFile == null) return;
        
        isLoading = true;
        importResult = new ImportResult();
        
        try
        {
            await using var stream = selectedFile.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
            
            // Создаем временный файл
            var tempFile = Path.GetTempFileName();
            var extension = Path.GetExtension(selectedFile.Name);
            var targetFile = Path.ChangeExtension(tempFile, extension);
            
            await using (var fileStream = new FileStream(targetFile, FileMode.Create))
            {
                await stream.CopyToAsync(fileStream);
            }
            
            // Импортируем данные
            await ImportFromExcel(targetFile);
            
            // Удаляем временный файл
            File.Delete(targetFile);
        }
        catch (Exception ex)
        {
            importResult.ErrorMessage = $"Ошибка: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private async Task ImportFromExcel(string filePath)
    {
        using var workbook = new XLWorkbook(filePath);
        using var context = DbFactory.CreateDbContext();
        
        // 1. Импорт категорий
        if (workbook.Worksheets.TryGetWorksheet("Категории", out var catSheet))
        {
            var categories = catSheet.RowsUsed().Skip(1)
                .Select(row => new Category
                {
                    Name = row.Cell(2).GetString(),
                    Description = row.Cell(3).GetString()
                });
            
            await context.Categories.AddRangeAsync(categories);
            importResult.CategoriesImported = categories.Count();
        }
        
        // 2. Импорт производителей
        if (workbook.Worksheets.TryGetWorksheet("Производители", out var manSheet))
        {
            var manufacturers = manSheet.RowsUsed().Skip(1)
                .Select(row => new Manufacturer
                {
                    Name = row.Cell(2).GetString(),
                    Country = row.Cell(3).GetString(),
                    Description = row.Cell(4).GetString()
                });
            
            await context.Manufacturers.AddRangeAsync(manufacturers);
            await context.SaveChangesAsync();
            importResult.ManufacturersImported = manufacturers.Count();
        }
        
        // 3. Импорт товаров
        if (workbook.Worksheets.TryGetWorksheet("Товары", out var partsSheet))
        {
            var categories = await context.Categories.ToListAsync();
            var manufacturers = await context.Manufacturers.ToListAsync();
            
            var parts = partsSheet.RowsUsed().Skip(1)
                .Select(row => new Part
                {
                    Article = row.Cell(2).GetString(),
                    Name = row.Cell(3).GetString(),
                    ManufacturerId = manufacturers
                        .FirstOrDefault(m => m.Name == row.Cell(4).GetString())?.ManufacturerId ?? 1,
                    CategoryId = categories
                        .FirstOrDefault(c => c.Name == row.Cell(5).GetString())?.CategoryId ?? 1,
                    Price = row.Cell(6).TryGetValue<decimal>(out var price) ? price : 0,
                    StockQuantity = row.Cell(7).TryGetValue<int>(out var stock) ? stock : 0,
                    Description = row.Cell(8).GetString(),
                });
            
            await context.Parts.AddRangeAsync(parts);
            importResult.PartsImported = parts.Count();
        }
        
        await context.SaveChangesAsync();
    }
}

<style>
