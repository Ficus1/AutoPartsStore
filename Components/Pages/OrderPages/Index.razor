@page "/orders"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using AutoPartsStore.Data
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@attribute [Authorize]
@inject IDbContextFactory<AutoPartsStore.Data.AutoPartsContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Заказы</PageTitle>

@if (isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Загрузка...</span>
        </div>
        <p class="mt-2">Загрузка заказов...</p>
    </div>
}
else
{
    <div class="card mb-4">
        <div class="card-body">
            <h2 class="card-title mb-4">Заказы</h2>

            <!-- Первая строка фильтров -->
            <div class="row g-3 mb-3">
                <!-- Поиск -->
                <div class="col-md-4">
                    <label class="form-label small text-muted">Поиск</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control" 
                               placeholder="Номер, адрес, телефон..." 
                               value="@searchText" 
                               @oninput="(e) => { searchText = e.Value?.ToString(); ApplyFilters(); }" />
                    </div>
                </div>
                
                <!-- Фильтр по статусу -->
                <div class="col-md-3">
                    <label class="form-label small text-muted">Статус</label>
                    <select class="form-select" value="@statusFilter" 
                            @onchange="(e) => { statusFilter = e.Value?.ToString(); ApplyFilters(); }">
                        <option value="">Все статусы</option>
                        <option value="В обработке">В обработке</option>
                        <option value="Оплачен">Оплачен</option>
                        <option value="Доставлен">Доставлен</option>
                        <option value="Отменен">Отменен</option>
                    </select>
                </div>
                
                <!-- Фильтр по пользователю (только для админов и менеджеров) -->
                @if (!isCustomer)
                {
                    <div class="col-md-3">
                        <label class="form-label small text-muted">Пользователь</label>
                        <select class="form-select" value="@selectedUserId" 
                                @onchange="(e) => { selectedUserId = string.IsNullOrEmpty(e.Value?.ToString()) ? string.Empty : e.Value.ToString(); ApplyFilters(); }">
                            <option value="">Все пользователи</option>
                            @foreach (var user in users)
                            {
                                <option value="@user.Id">@($"{user.LastName} {user.MiddleName} {user.FirstName} - {user.Email}")</option>
                            }
                        </select>
                    </div>
                }
                else
                {
                    <div class="col-md-3"></div>
                }
                
                <!-- Кнопка создания -->
                <div class="col-md-2 d-flex align-items-end">
                    <a href="orders/create" class="btn btn-primary w-100">
                        <i class="bi bi-plus-circle me-1"></i> Создать
                    </a>
                </div>
            </div>

            <!-- Вторая строка фильтров -->
            <div class="row g-3">
                <!-- Дата от -->
                <div class="col-md-3">
                    <label class="form-label small text-muted">Дата от</label>
                    <input type="date" class="form-control" 
                           value="@(dateFrom?.ToString("yyyy-MM-dd"))" 
                           @onchange="(e) => { dateFrom = string.IsNullOrEmpty(e.Value?.ToString()) ? (DateTime?)null : DateTime.Parse(e.Value.ToString()); ApplyFilters(); }" />
                </div>
                
                <!-- Дата до -->
                <div class="col-md-3">
                    <label class="form-label small text-muted">Дата до</label>
                    <input type="date" class="form-control" 
                           value="@(dateTo?.ToString("yyyy-MM-dd"))" 
                           @onchange="(e) => { dateTo = string.IsNullOrEmpty(e.Value?.ToString()) ? (DateTime?)null : DateTime.Parse(e.Value.ToString()); ApplyFilters(); }" />
                </div>
                
                <!-- Минимальная сумма -->
                <div class="col-md-3">
                    <label class="form-label small text-muted">Мин. сумма, ₽</label>
                    <input type="number" class="form-control" 
                           placeholder="0" 
                           value="@minAmount" 
                           @oninput="(e) => { minAmount = string.IsNullOrEmpty(e.Value?.ToString()) ? (decimal?)null : Convert.ToDecimal(e.Value); ApplyFilters(); }" />
                </div>
                
                <!-- Кнопка сброса фильтров -->
                <div class="col-md-3 d-flex align-items-end">
                    @if (HasActiveFilters)
                    {
                        <button class="btn btn-outline-secondary w-100" @onclick="ResetFilters">
                            <i class="bi bi-x-circle me-1"></i> Сбросить фильтры
                        </button>
                    }
                </div>
            </div>
            
            <!-- Индикатор активных фильтров -->
            @if (HasActiveFilters)
            {
                <div class="alert alert-info d-flex align-items-center justify-content-between mt-3 mb-0 py-2">
                    <div>
                        <i class="bi bi-funnel me-2"></i>
                        Применены фильтры. Показано @filteredOrders.Count из @totalOrders заказов
                    </div>
                    <button class="btn btn-sm btn-outline-info" @onclick="ResetFilters">
                        Сбросить все фильтры
                    </button>
                </div>
            }
        </div>
    </div>

    @if (filteredOrders.Any())
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="h5">@filteredOrders.Count из @totalOrders</div>
                        <div class="text-muted small">Заказов</div>
                    </div>
                    <div class="col-md-3">
                        @{
                            var itemsCount = filteredOrders.Sum(o => o.OrderItems?.Sum(oi => oi.Quantity) ?? 0);
                        }
                        <div class="h5">@itemsCount шт.</div>
                        <div class="text-muted small">Товаров в заказах</div>
                    </div>
                    <div class="col-md-3">
                        @{
                            var total = filteredOrders.Sum(o => o.TotalAmount);
                        }
                        <div class="h5 text-success">@total.ToString("N2") ₽</div>
                        <div class="text-muted small">Общая сумма</div>
                    </div>
                    <div class="col-md-3">
                        @{
                            var processingCount = filteredOrders.Count(o => o.Status == "В обработке");
                        }
                        <div class="h5 text-primary">@processingCount</div>
                        <div class="text-muted small">В обработке</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body p-0">
                <QuickGrid Items="filteredOrders.AsQueryable()" Class="table table-striped table-hover mb-0">
                    <PropertyColumn Title="№" Property="order => order.OrderId" Sortable="true" />
                    
                    <!-- Столбец пользователя для всех ролей -->
                    <TemplateColumn Title="Пользователь">
                        @if (context.User != null)
                        {
                            <div>
                                <div class="fw-medium">@context.User.LastName @context.User.FirstName</div>
                                <small class="text-muted">@context.User.Email</small>
                                <div class="text-muted small">@context.User.PhoneNumber</div>
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">Не указан</span>
                        }
                    </TemplateColumn>
                    
                    <PropertyColumn Title="Дата заказа" Property="order => order.OrderDate" Sortable="true" Format="dd.MM.yyyy HH:mm" />
                    
                    <TemplateColumn Title="Статус">
                        @{
                            var statusClass = context.Status switch
                            {
                                "В обработке" => "badge bg-warning",
                                "Оплачен" => "badge bg-info",
                                "Доставлен" => "badge bg-success",
                                "Отменен" => "badge bg-danger",
                                _ => "badge bg-secondary"
                            };
                        }
                        <span class="@statusClass">@context.Status</span>
                    </TemplateColumn>
                    
                    <TemplateColumn Title="Товары">
                        @{
                            var itemCount = context.OrderItems?.Count ?? 0;
                            var totalQuantity = context.OrderItems?.Sum(oi => oi.Quantity) ?? 0;
                        }
                        @if (itemCount > 0)
                        {
                            <div>
                                <div><strong>@itemCount</strong> поз.</div>
                                <small class="text-muted">@totalQuantity шт.</small>
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">Нет</span>
                        }
                    </TemplateColumn>
                    
                    <PropertyColumn Title="Сумма, ₽" Property="order => order.TotalAmount" Sortable="true" Format="N2" />
                    
                    <TemplateColumn Title="Адрес доставки">
                        @if (!string.IsNullOrEmpty(context.ShippingAddress))
                        {
                            <div>
                                <div>@context.ShippingAddress</div>
                                @if (!string.IsNullOrEmpty(context.PhoneNumber))
                                {
                                    <small class="text-muted">📞 @context.PhoneNumber</small>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">Не указан</span>
                        }
                    </TemplateColumn>
                    
                    <TemplateColumn Title="Действия">
                        <div class="d-flex gap-2">
                            <a href="@($"orders/details?orderid={context.OrderId}")" 
                                class="btn btn-sm btn-outline-secondary" title="Просмотреть детали">
                                <i class="bi bi-eye me-1"></i>Детали
                            </a>
                            
                            @if (!isCustomer)
                            {
                                <a href="@($"orders/edit?orderid={context.OrderId}")" 
                                    class="btn btn-sm btn-outline-primary" title="Редактировать заказ">
                                    <i class="bi bi-pencil me-1"></i>Изменить
                                </a>
                                <a href="@($"orders/delete?orderid={context.OrderId}")" 
                                    class="btn btn-sm btn-outline-danger" title="Удалить заказ">
                                    <i class="bi bi-trash me-1"></i>Удалить
                                </a>
                            }

                            <!-- Кнопка отмены заказа только для пользователя (Customer) -->
                            @if (isCustomer && CanCancelOrder(context))
                            {
                                <button class="btn btn-sm btn-outline-danger"
                                        @onclick="() => CancelOrder(context.OrderId)" title="Отменить заказ">
                                    <i class="bi bi-x-circle me-1"></i>Отменить
                                </button>
                            }
                        </div>
                    </TemplateColumn>
                </QuickGrid>
            </div>
        </div>
        
        <!-- Информация о количестве записей внизу таблицы -->
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div class="text-muted small">
                Показано @filteredOrders.Count из @totalOrders заказов
                @if (HasActiveFilters)
                {
                    <span class="ms-2">(фильтры применены)</span>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <div class="d-flex align-items-center">
                <i class="bi bi-info-circle me-3 fs-4"></i>
                <div>
                    <p class="mb-1">
                        @if (HasActiveFilters)
                        {
                            <span>Заказы по заданным критериям не найдены. Всего доступно заказов: @totalOrders</span>
                        }
                        else
                        {
                            <span>Нет доступных заказов.</span>
                        }
                    </p>
                    @if (HasActiveFilters)
                    {
                        <button @onclick="ResetFilters" class="btn btn-sm btn-outline-info mt-2">
                            <i class="bi bi-x-circle me-1"></i> Сбросить фильтры
                        </button>
                    }
                    <a href="orders/create" class="btn btn-sm btn-primary mt-2 ms-2">
                        <i class="bi bi-plus-circle me-1"></i> Создать заказ
                    </a>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<Order> orders = new();
    private List<Order> filteredOrders = new();
    private List<ApplicationUser> users = new();
    private bool isLoading = true;
    private bool isCustomer = false;
    private string currentUserId = string.Empty;
    private int totalOrders = 0;

    // Параметры фильтрации
    private string searchText = string.Empty;
    private string statusFilter = string.Empty;
    private string selectedUserId = string.Empty;
    private DateTime? dateFrom;
    private DateTime? dateTo;
    private decimal? minAmount;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Получаем информацию о текущем пользователе
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            
            // Получаем ID текущего пользователя
            currentUserId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? string.Empty;
            
            // Проверяем роль пользователя
            isCustomer = user.IsInRole("Customer") && 
                        !user.IsInRole("Manager") && 
                        !user.IsInRole("Administrator");
            
            // Загружаем данные
            await LoadData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при загрузке заказов: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadData()
    {
        using var context = DbFactory.CreateDbContext();
        
        // Загружаем заказы
        IQueryable<Order> query = context.Orders
            .Include(o => o.User)
            .Include(o => o.OrderItems)
            .OrderByDescending(o => o.OrderDate);
        
        // Фильтруем заказы в зависимости от роли пользователя
        if (isCustomer && !string.IsNullOrEmpty(currentUserId))
        {
            query = query.Where(o => o.UserId == currentUserId);
        }
        
        orders = await query.ToListAsync();
        totalOrders = orders.Count; // Сохраняем общее количество заказов
        
        // Загружаем пользователей (только для администраторов и менеджеров)
        if (!isCustomer)
        {
            users = await context.Users
                .OrderBy(u => u.LastName)
                .ThenBy(u => u.FirstName)
                .ToListAsync();
        }

        ApplyFilters();
    }

    private bool HasActiveFilters =>
        !string.IsNullOrEmpty(searchText) ||
        !string.IsNullOrEmpty(statusFilter) ||
        (!string.IsNullOrEmpty(selectedUserId) && !isCustomer) ||
        dateFrom.HasValue ||
        dateTo.HasValue ||
        minAmount.HasValue;

    private void ApplyFilters()
    {
        var query = orders.AsQueryable();

        // Поиск по тексту
        if (!string.IsNullOrEmpty(searchText))
        {
            var searchLower = searchText.ToLower();
            query = query.Where(o => 
                o.OrderId.ToString().Contains(searchLower) ||
                (o.ShippingAddress != null && o.ShippingAddress.ToLower().Contains(searchLower)) ||
                (o.PhoneNumber != null && o.PhoneNumber.Contains(searchText)) ||
                (o.User != null && (
                    (o.User.LastName != null && o.User.LastName.ToLower().Contains(searchLower)) ||
                    (o.User.FirstName != null && o.User.FirstName.ToLower().Contains(searchLower)) ||
                    (o.User.Email != null && o.User.Email.ToLower().Contains(searchLower)) ||
                    (o.User.PhoneNumber != null && o.User.PhoneNumber.Contains(searchText))
                ))
            );
        }

        // Фильтр по статусу
        if (!string.IsNullOrEmpty(statusFilter))
        {
            query = query.Where(o => o.Status == statusFilter);
        }

        // Фильтр по пользователю (только для админов и менеджеров)
        if (!isCustomer && !string.IsNullOrEmpty(selectedUserId))
        {
            query = query.Where(o => o.UserId == selectedUserId);
        }

        // Фильтр по дате от
        if (dateFrom.HasValue)
        {
            query = query.Where(o => o.OrderDate >= dateFrom.Value);
        }

        // Фильтр по дате до
        if (dateTo.HasValue)
        {
            var endOfDay = dateTo.Value.Date.AddDays(1).AddTicks(-1);
            query = query.Where(o => o.OrderDate <= endOfDay);
        }

        // Фильтр по минимальной сумме
        if (minAmount.HasValue)
        {
            query = query.Where(o => o.TotalAmount >= minAmount.Value);
        }

        filteredOrders = query.ToList();
    }

    private void ResetFilters()
    {
        searchText = string.Empty;
        statusFilter = string.Empty;
        selectedUserId = string.Empty;
        dateFrom = null;
        dateTo = null;
        minAmount = null;
        ApplyFilters();
    }

    private bool CanCancelOrder(Order order)
    {
        // Проверяем, можно ли отменить заказ
        // Заказ можно отменить, если он в статусе "В обработке" или "Оплачен"
        var canCancelStatuses = new[] { "В обработке", "Оплачен" };
        
        if (!canCancelStatuses.Contains(order.Status))
            return false;
        
        // Пользователь может отменить только свои заказы
        if (order.UserId != currentUserId)
            return false;
            
        return true;
    }

    private async Task CancelOrder(int orderId)
    {
        try
        {
            using var context = DbFactory.CreateDbContext();
            
            // Загружаем заказ с товарами
            var order = await context.Orders
                .Include(o => o.OrderItems)
                .FirstOrDefaultAsync(o => o.OrderId == orderId);
            
            if (order == null)
            {
                Console.WriteLine($"Заказ #{orderId} не найден");
                return;
            }

            // Проверяем права на отмену
            if (!CanCancelOrder(order))
            {
                Console.WriteLine("Недостаточно прав для отмены заказа");
                return;
            }
            
            // Меняем статус заказа на "Отменен"
            order.Status = "Отменен";
            
            // Возвращаем товары на склад
            foreach (var item in order.OrderItems ?? new List<OrderItem>())
            {
                var part = await context.Parts.FindAsync(item.PartId);
                if (part != null)
                {
                    part.StockQuantity += item.Quantity;
                }
            }
            
            await context.SaveChangesAsync();
            
            // Обновляем список заказов
            await LoadData();
            StateHasChanged();
            
            Console.WriteLine($"Заказ #{orderId} отменен");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при отмене заказа: {ex.Message}");
        }
    }
}