@page "/Account/AccessDenied"

<PageTitle>Доступ запрещен</PageTitle>

<div class="access-denied-container">
    <div class="access-denied-content text-center">
        <div class="mb-4">
            <i class="bi bi-shield-exclamation text-danger" style="font-size: 4rem;"></i>
        </div>
        
        <h1 class="text-danger fw-bold mb-3">Доступ запрещен</h1>
        
        <div class="alert alert-warning border-warning mb-4" style="max-width: 500px; margin: 0 auto;">
            <p class="mb-0">У вас недостаточно прав для доступа к этому ресурсу.</p>
        </div>
        
        <div class="mt-4">
            
            <div class="d-flex justify-content-center gap-3 mt-4">
                <a href="/" class="btn btn-primary btn-lg px-4">
                    <i class="bi bi-house-door me-2"></i>На главную
                </a>
                
                <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-arrow-left me-2"></i>Вернуться назад
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .access-denied-container {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }
    
    .access-denied-content {
        max-width: 600px;
        padding: 2rem;
        background-color: #f8f9fa;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        border: 1px solid #e9ecef;
    }
    
    .access-denied-content h1 {
        font-size: 2.5rem;
    }
</style>